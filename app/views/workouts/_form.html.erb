    <% if @workouts.errors.any? %>

        <h3>The following errors prevented the Workout Log from getting created</h3>

        <ul>
            <% @workouts.errors.full_messages.each do |msg| %>
            <li><%=msg%></li>
            <%end%>
        </ul>
    <% end %>
    
    
    <%= form_for @workouts do |f| %>
    
        <p>
            <%= f.label :weight, 'How much do you weigh?' %> </br>
            <%= f.number_field :weight %>
        </p>
        <p>
            <%= f.label :exercise, 'What exercise did you perform?' %> </br>
            <%= f.text_field :exercise %> 
        </p>
        
        <p>
            <%= f.label :repetition, 'How many repetitions did you perform?' %> </br>
            <%= f.number_field :repetition %>
        </p>
        
        <p>
            <%= f.label :time, 'How long, in minutes, did you perform the exercise?' %> </br>
            <%= f.number_field :time %>
        </p>
        
        <p>
            <%= f.submit %>
        </p>
    
    <%end%>
    
    <%= link_to 'Back to Main Page', workouts_path %>