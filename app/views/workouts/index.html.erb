



<center> 

<h2>Welcome to Facebook Fitness  </h2>

<h4><%= current_user.email %></h4>

  
 
  <table border= '1'>
    <tr border= '1'>
      <th> Weight </th>
      <th> Exercise </th>
      <th> Repetition </th>
      <th> Time </th>
    </tr>
      <% @workouts.each do |workout| %>
    <tr>
      <td><%= workout.weight %></td>
      <td><%= workout.exercise %></td>
      <td><%= workout.repetition %></td>
      <td><%= workout.time %></td>
      <td><%= link_to 'Edit', edit_workout_path(workout), {style: "color: black"} %></td>
    
      <td><%= link_to 'Delete', workout_path(workout), method: :delete, data: {confirm: "Are you sure you want to delete this log?"} %></td>   
    </tr>
    <% end %>
  </table>
  </br>
    </br>
      </br>
        </br>
<%= render "layouts/sharebutton" %>

</center>  

